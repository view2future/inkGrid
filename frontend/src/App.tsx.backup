import React, { useState } from 'react';
import { useTranslation } from 'react-i18next';
import { useMutation } from '@tanstack/react-query';
import axios from 'axios';
import { motion, AnimatePresence } from 'framer-motion';
import { Upload, Download, Search, Globe, Box, Settings, Layers, MousePointer2, PenTool, Type, HelpCircle, Info, CheckCircle2, History, ChevronRight, X, Compass } from 'lucide-react';
import PixiRenderer from './components/PixiRenderer';
import TracingBoard from './components/TracingBoard';
import ARQuest from './components/ARQuest';
import { cn } from './utils/cn';

interface AlignedCharacter {
  text: string;
  aligned_text: string;
  simplified: string;
  pinyin: string;
  meaning: string;
  bbox: [number, number, number, number];
  confidence: number;
}

function App() {
  const { t, i18n } = useTranslation();
  const [imagePath, setImagePath] = useState<string | null>(null);
  const [characters, setCharacters] = useState<AlignedCharacter[]>([]);
  const [selectedChar, setSelectedChar] = useState<AlignedCharacter | null>(null);
  const [showTracing, setShowTracing] = useState(false);
  const [showAR, setShowAR] = useState(false);
  
  const mockTargetPath = [
    {x:100,y:100}, {x:200,y:100}, {x:200,y:300}, {x:100,y:300}, {x:100,y:100}
  ];

  const detectMutation = useMutation({
    mutationFn: async (file: File) => {
      const formData = new FormData();
      formData.append('file', file);
      formData.append('stele_name', '峄山刻石');
      const res = await axios.post<any>('http://localhost:8000/api/detect', formData);
      return res.data;
    },
    onSuccess: (data) => {
      setImagePath(data.image_path);
      setCharacters(data.characters);
      if (data.characters.length > 0) setSelectedChar(data.characters[0]);
    }
  });

  return (
    <div className="min-h-screen bg-stone-950 text-stone-200 font-sans selection:bg-amber-500/30 overflow-hidden flex flex-col">
      <div className="fixed inset-0 pointer-events-none opacity-[0.03] bg-[url('https://www.transparenttextures.com/patterns/handmade-paper.png')] z-0"></div>

      <motion.header 
        initial={{ y: -100 }} animate={{ y: 0 }}
        className="h-16 border-b border-stone-800/50 bg-stone-900/40 backdrop-blur-xl flex items-center justify-between px-8 z-50 relative"
      >
        <div className="flex items-center gap-6">
          <div className="relative cursor-pointer group" onClick={() => setShowAR(true)}>
             <div className="absolute inset-0 bg-amber-600 blur-lg opacity-20 group-hover:opacity-40 transition-opacity"></div>
             <div className="w-10 h-10 bg-gradient-to-br from-amber-500 to-amber-700 rounded-xl flex items-center justify-center shadow-2xl relative z-10 transition-transform group-hover:scale-105">
                <Compass className="text-white" size={24} />
             </div>
          </div>
          <div>
            <h1 className="text-xl font-bold tracking-[0.3em] uppercase flex items-center gap-3">
              {t('app_title')}
              <span className="text-[8px] font-mono text-stone-500 border border-stone-800 px-2 py-0.5 rounded-full tracking-normal">PRIME</span>
            </h1>
            <p className="text-[9px] text-stone-600 uppercase tracking-[0.4em] font-medium">
              Ink-Grid Matrix / Precision Annotation
            </p>
          </div>
        </div>

        <div className="flex items-center gap-8">
          <div className="hidden md:flex items-center gap-6 text-[10px] font-bold tracking-[0.2em] text-stone-500">
             <a href="#" className="hover:text-amber-500 transition-colors uppercase">Gallery</a>
             <a href="#" className="hover:text-amber-500 transition-colors uppercase">Academy</a>
             <button onClick={() => setShowAR(true)} className="hover:text-amber-500 transition-colors uppercase flex items-center gap-2">
                <Scan size={12} /> AR QUEST
             </button>
             <a href="#" className="text-amber-600 border-b border-amber-600 pb-0.5 uppercase">Workbench</a>
          </div>

          <div className="flex items-center gap-4 border-l border-stone-800 pl-8">
            <button onClick={() => i18n.changeLanguage(i18n.language === 'zh' ? 'en' : 'zh')} className="p-2 hover:bg-stone-800 rounded-full transition-all text-stone-400 hover:text-amber-500">
              <Globe size={18} />
            </button>
            <label className="flex items-center gap-3 bg-stone-100 hover:bg-white text-stone-900 px-6 py-2 rounded-full text-xs cursor-pointer transition-all shadow-[0_10px_20px_rgba(0,0,0,0.4)] font-black tracking-widest uppercase active:scale-95">
              <Upload size={14} />
              <span>{t('upload')}</span>
              <input type="file" className="hidden" onChange={(e) => { if (e.target.files && e.target.files[0]) detectMutation.mutate(e.target.files[0]); }} />
            </label>
          </div>
        </div>
      </motion.header>

      <div className="flex-1 flex p-4 gap-4 overflow-hidden relative z-10">
        <motion.aside initial={{ x: -300 }} animate={{ x: 0 }} className="w-80 bg-stone-900/60 border border-stone-800/50 rounded-3xl flex flex-col shadow-2xl backdrop-blur-2xl overflow-hidden">
          <div className="p-5 border-b border-stone-800/50 flex justify-between items-center bg-stone-950/20">
            <h2 className="text-[10px] font-mono text-stone-500 uppercase tracking-[0.3em] flex items-center gap-3">
              <Layers size={14} className="text-amber-600" />
              {t('explorer')}
            </h2>
            <History size={14} className="text-stone-600 hover:text-stone-400 cursor-pointer" />
          </div>
          <div className="flex-1 overflow-y-auto p-4 space-y-4 custom-scrollbar">
            {characters.length === 0 ? (
              <div className="h-full flex flex-col items-center justify-center opacity-20 grayscale">
                 <Search size={48} strokeWidth={0.5} />
                 <p className="mt-4 text-[10px] uppercase tracking-widest font-bold">Waiting for input...</p>
              </div>
            ) : (
              <div className="grid grid-cols-4 gap-3">
                {characters.map((char, i) => (
                  <motion.button 
                    whileHover={{ scale: 1.05 }} whileTap={{ scale: 0.95 }}
                    key={i} onClick={() => setSelectedChar(char)}
                    className={cn(
                      "aspect-square rounded-xl flex flex-col items-center justify-center border transition-all relative overflow-hidden group",
                      selectedChar === char ? 'bg-amber-600 text-white border-amber-500 shadow-xl' : 'bg-stone-800/40 text-stone-500 border-stone-800 hover:border-stone-600'
                    )}
                  >
                    <span className="text-2xl font-serif">{char.aligned_text}</span>
                    <span className="text-[7px] mt-1 opacity-50 font-mono tracking-tighter uppercase">{char.pinyin}</span>
                  </button>
                ))}
              </div>
            )}
          </div>
        </motion.aside>

        <section className="flex-1 bg-stone-900/30 rounded-[2.5rem] relative overflow-hidden border border-stone-800/50 shadow-inner group">
          <AnimatePresence mode="wait">
            {imagePath ? (
              <motion.div key="canvas" initial={{ opacity: 0 }} animate={{ opacity: 1 }} className="w-full h-full">
                <PixiRenderer imageUrl={`http://localhost:8000/api/image/${imagePath}`} />
              </motion.div>
            ) : (
              <motion.div key="placeholder" initial={{ opacity: 0 }} animate={{ opacity: 1 }} className="w-full h-full flex flex-col items-center justify-center text-stone-700">
                 <Box size={120} strokeWidth={0.2} className="opacity-10 animate-pulse" />
                 <p className="mt-8 text-[10px] font-mono uppercase tracking-[1em] opacity-40">Ready to Load</p>
              </motion.div>
            )}
          </AnimatePresence>
          
          <AnimatePresence>
            {showTracing && selectedChar && (
              <motion.div initial={{ opacity: 0 }} animate={{ opacity: 1 }} exit={{ opacity: 0 }} className="absolute inset-0 z-50 bg-stone-950/90 backdrop-blur-md flex items-center justify-center p-8">
                 <div className="absolute top-8 right-12">
                   <button onClick={() => setShowTracing(false)} className="p-3 bg-stone-800 hover:bg-stone-700 rounded-full text-stone-400 border border-stone-700 shadow-2xl">
                     <X size={24} />
                   </button>
                 </div>
                 <div className="max-w-2xl w-full">
                    <div className="mb-8 flex flex-col items-center">
                       <h4 className="text-[10px] font-black tracking-[0.5em] text-amber-500/50 uppercase mb-2">Immersive Tracing Mode</h4>
                       <h2 className="text-3xl font-serif font-bold tracking-widest italic opacity-80">数字透光台</h2>
                    </div>
                    <TracingBoard char={selectedChar.aligned_text} targetPath={mockTargetPath} onComplete={(s) => console.log("Score:", s)} />
                 </div>
              </motion.div>
            )}
          </AnimatePresence>

          <div className="absolute bottom-10 right-12 opacity-[0.03] pointer-events-none select-none">
             <h3 className="text-[12rem] font-serif font-black text-white leading-none uppercase">InkGrid</h3>
          </div>
        </section>

        <motion.aside initial={{ x: 300 }} animate={{ x: 0 }} className="w-80 bg-stone-900/80 border border-stone-800/50 rounded-3xl flex flex-col shadow-2xl backdrop-blur-3xl overflow-hidden">
          <div className="p-5 border-b border-stone-800/50 bg-stone-950/40">
            <h2 className="text-[10px] font-mono text-stone-500 uppercase tracking-[0.3em] flex items-center gap-3">
              <span className="w-2 h-2 bg-amber-500 rounded-full shadow-[0_0_12px_rgba(245,158,11,0.8)]"></span>
              {t('precision')} | Workbench
            </h2>
          </div>
          <div className="flex-1 p-6 flex flex-col">
            <AnimatePresence mode="wait">
              {selectedChar ? (
                <motion.div key={selectedChar.aligned_text} initial={{ opacity: 0, y: 10 }} animate={{ opacity: 1, y: 0 }} exit={{ opacity: 0, y: -10 }} className="space-y-8 h-full flex flex-col">
                  <div className="py-8 bg-stone-950/40 rounded-2xl border border-stone-800/50 flex flex-col items-center relative overflow-hidden group">
                     <div className="absolute inset-0 bg-amber-500/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                     <div className="text-8xl font-serif text-amber-500 drop-shadow-[0_0_25px_rgba(245,158,11,0.2)] select-none">
                       {selectedChar.aligned_text}
                     </div>
                     <div className="mt-4 flex flex-col items-center gap-1">
                       <span className="text-xs font-bold tracking-[0.4em] uppercase text-stone-400">{selectedChar.pinyin}</span>
                       <span className="text-[8px] text-stone-600 font-mono tracking-widest mt-2 uppercase italic">Precision Index: 0.99</span>
                     </div>
                  </div>
                  <div className="space-y-6">
                    <AttributeItem label="简体字 / Simplified" value={selectedChar.simplified} />
                    <AttributeItem label="释义 / Etymology" value={selectedChar.meaning} />
                  </div>
                  <div className="mt-auto grid grid-cols-2 gap-3 pb-2">
                    <button className="flex flex-col items-center gap-2 bg-stone-800/50 hover:bg-stone-800 p-3 rounded-2xl transition-all border border-stone-700/50 group">
                      <PenTool size={18} className="text-stone-500 group-hover:text-amber-500" />
                      <span className="text-[8px] font-bold tracking-widest text-stone-500 uppercase">Vector</span>
                    </button>
                    <button onClick={() => setShowTracing(true)} className="flex flex-col items-center gap-2 bg-stone-800/50 hover:bg-stone-800 p-3 rounded-2xl transition-all border border-stone-700/50 group">
                      <Info size={18} className="text-stone-500 group-hover:text-amber-500" />
                      <span className="text-[8px] font-bold tracking-widest text-stone-500 uppercase">Tracing</span>
                    </button>
                  </div>
                </motion.div>
              ) : (
                <div className="h-full flex flex-col items-center justify-center opacity-20 italic text-xs tracking-widest uppercase">Select Unit to Inspect</div>
              )}
            </AnimatePresence>
          </div>
          <div className="p-6 bg-stone-950/60 border-t border-stone-800/50">
             <button className="w-full flex items-center justify-center gap-4 bg-amber-600 hover:bg-amber-500 text-white py-4 rounded-2xl text-[10px] font-black uppercase tracking-[0.3em] transition-all shadow-[0_15px_30px_rgba(217,119,6,0.2)]">
               <Download size={16} />
               {t('export')}
             </button>
          </div>
        </motion.aside>
      </div>

      <AnimatePresence>
        {showAR && (
          <ARQuest steleName="峄山刻石 (The Yishan Stele)" onClose={() => setShowAR(false)} />
        )}
      </AnimatePresence>
    </div>
  );
}

function AttributeItem({ label, value }: { label: string, value: string }) {
  return (
    <div className="flex flex-col gap-2 group">
      <div className="flex items-center gap-2">
         <span className="text-[8px] font-bold text-stone-600 uppercase tracking-widest">{label}</span>
         <div className="h-[1px] flex-1 bg-stone-800 transition-colors group-hover:bg-stone-700"></div>
      </div>
      <div className="text-xs text-stone-400 bg-stone-950/30 px-4 py-3 rounded-xl border border-transparent hover:border-stone-800 transition-all">
        {value}
      </div>
    </div>
  );
}

export default App;